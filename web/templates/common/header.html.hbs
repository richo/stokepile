<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Web interface to github.com/richo/stokepile">
  <title>Stokepile</title>
  <link rel="stylesheet" href="/static/pure.css">
  <link rel="stylesheet" href="/static/grids-responsive-min.css">
  <link rel="stylesheet" href="/static/stokepile.css">

  <link rel="apple-touch-icon" sizes="180x180" href="/static/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/static/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/static/favicon-16x16.png">
  <link rel="manifest" href="/static/site.webmanifest">
  <link rel="mask-icon" href="/static/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">
</head>

<body>
  <div class="content">
    <div class="header">
      <a href="/" class="pure-button home-button">stokepile</a>
      {{#unless (active_module module "Media")}}<a href="/" class="pure-button button-small">Media</a>{{/unless}}
      {{#unless (active_module module "Rigging")}}<a href="/rigging" class="pure-button button-small">Rigging</a>{{/unless}}
      <div class="header-actions">
        {{#if user}}
        <span class="header-email">{{user.email}}</span>
        {{/if}}
        <a href="/help" class="pure-button button-small">Help</a>
        <a href="/beta" class="pure-button button-small">Beta information</a>
      </div>
    </div>

    <div class="header">
      <div class="header-actions">
      {{#if (active_module module "Media")}}
        <a href="/settings" class="pure-button button-small">Settings</a>
        {{#if user.admin }}
          <a href="/admin" class="pure-button button-small admin-button">Admin</a>
        {{/if}}
      {{/if}}
      {{#if (active_module module "Rigging")}}
        <a href="/rigging/customers" class="pure-button button-small">Customers</a>
        <a href="/rigging/service_bulletins" class="pure-button button-small">Service Bulletins</a>
      {{/if}}
      </div>
    </div>
